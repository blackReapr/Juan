@model RegisterVM
<!-- breadcrumb area start -->
<div class="breadcrumb-area bg-img">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="breadcrumb-wrap text-center">
                    <nav aria-label="breadcrumb">
                        <h1 class="breadcrumb-title">Register</h1>
                        <ul class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller="home" asp-action="index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb area end -->
<div class="container">
    <div class="row text-danger small">
        @Html.ValidationMessage("Error")
    </div>
</div>
<!-- login register wrapper start -->
<div class="login-register-wrapper section-padding">
    <div class="container">
        <div class="member-area-from-wrap">
            <div class="row justify-content-center">
                <!-- Register Content Start -->
                <div class="col-lg-6">
                    <div class="login-reg-form-wrap signup-form">
                        <h2>Singup Form</h2>
                        <form method="post">
                            <div class="single-input-item">
                                <input asp-for="Username" placeholder="Username" />
                                <span class="text-danger small" asp-validation-for="Username"></span>
                            </div>
                            <div class="single-input-item">
                                <input asp-for="Email" placeholder="Enter your Email" />
                                <span class="text-danger small" asp-validation-for="Email"></span>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="single-input-item">
                                        <input asp-for="Password" placeholder="Enter your Password" />
                                        <span class="text-danger small" asp-validation-for="Password"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="single-input-item">
                                        <input asp-for="RePassword" placeholder="Repeat your Password" />
                                        <span class="text-danger small" asp-validation-for="RePassword"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="single-input-item">
                                <div class="login-reg-form-meta">
                                    <div class="remember-meta">
                                        <div class="custom-control custom-checkbox">
                                            <input asp-for="Subscribe" class="custom-control-input">
                                            <label class="custom-control-label" asp-for="Subscribe">Subscribe Our Newsletter</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="single-input-item">
                                <button class="btn">Register</button>
                            </div>
                        </form>
                        <a asp-action="signingoogle">Continue with google</a>
                    </div>
                </div>
                <!-- Register Content End -->
            </div>
        </div>
    </div>
</div>
<!-- login register wrapper end -->
