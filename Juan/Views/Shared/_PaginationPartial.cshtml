@model IPaginationVM

<div class="paginatoin-area text-center mt-45">
    <ul class="pagination-box">
        <li><a class="Previous @(Model.HasPrevious ? "" : "d-none")" asp-route-sortby="@Model.SortBy" asp-route-page=@(Model.CurrentPage-1) asp-route-color="@Model.ColorName" asp-route-size="@Model.SizeName" asp-route-amount="@Model.PriceRange"><i class="ion-ios-arrow-left"></i></a></li>
        @for (int i = Model.Start; i <= Model.End; i++)
        {
            <li class="@(Model.CurrentPage == i ? "active" : "")"><a asp-route-sortby="@Model.SortBy" asp-route-page=@i asp-route-color="@Model.ColorName" asp-route-size="@Model.SizeName" asp-route-amount="@Model.PriceRange">@i</a></li>
        }
        <li class="@(Model.HasNext ? "" : "d-none")"><a class="Next" asp-route-sortby="@Model.SortBy" asp-route-page=@(Model.CurrentPage+1) asp-route-color="@Model.ColorName" asp-route-size="@Model.SizeName" asp-route-amount="@Model.PriceRange"><i class="ion-ios-arrow-right"></i></a></li>
    </ul>
</div>