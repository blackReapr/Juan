@model IPaginationVM

<div class="paginatoin-area text-center mt-45">
    <ul class="pagination-box">
        <li><a class="Previous @(Model.HasPrevious ? "" : "d-none")" asp-route-page=@(Model.CurrentPage-1)><i class="ion-ios-arrow-left"></i></a></li>
        @for (int i = Model.Start; i <= Model.End; i++)
        {
            <li class="@(Model.CurrentPage == i ? "disabled active" : "")"><a asp-route-page=@i>@i</a></li>
        }
        <li class="@(Model.HasNext ? "" : "d-none")"><a class="Next" asp-route-page=@(Model.CurrentPage+1)><i class="ion-ios-arrow-right"></i></a></li>
    </ul>
</div>