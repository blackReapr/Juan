@model IEnumerable<Color>
<div class="container-fluid px-4">
    <h1 class="mt-4">Colors</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-area="admin" asp-controller="home" asp-action="index">Dashboard</a></li>
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <a asp-controller="tag" asp-action="create" class="btn btn-outline-primary mb-3">Create Color</a>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Colors Table
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Settings</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Color color in Model)
                    {
                        <tr>
                            <td>@color.Id</td>
                            <td>@color.Name</td>
                            <td>@color.CreatedAt.ToShortDateString()</td>
                            <td>
                                <a asp-controller="color" asp-action="update" asp-route-id="@color.Id" class="btn btn-info">update</a>
                                <a asp-controller="color" asp-action="delete" asp-route-id="@color.Id" class="btn btn-info">delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
