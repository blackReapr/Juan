@model LoginVM
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="@Model.UsernameOrEmail" placeholder="username or email" />
                            <label asp-for="@Model.UsernameOrEmail"></label>
                            <span class="text-danger" asp-validation-for="@Model.UsernameOrEmail"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" asp-for="@Model.Password" placeholder="Password" />
                            <label asp-for="@Model.Password">Password</label>
                            <span class="text-danger" asp-validation-for="@Model.Password"></span>
                        </div>
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="@Model.RememberMe" />
                            <label class="form-check-label" asp-for="@Model.RememberMe"></label>
                        </div>
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="small" asp-action="forgotpassword">Forgot Password?</a>
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center py-3">
                    <div class="small"><a asp-action="register">Need an account? Sign up!</a></div>
                </div>
            </div>
        </div>
    </div>
</div>
