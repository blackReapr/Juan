@model Slider
<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Slider: s@Model.Title</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">SubTitle: @Model.SubTitle</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>SubTitle</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>
                                <img width="100" height="100" src="~/assets/images/@Model.Image" alt="@Model.Title" />
                            </td>
                            <td>@Model.Title</td>
                            <td>@Model.SubTitle</td>
                            <td>@Model.Description</td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>